{% assign product = product_item %}

<div class="w-full py-6 px-3 border bg-withe shsdown-lg averflow-hidden">
  <a href="{{ product.url }}">
    {% if product.featured_image %}
      <div class="h-80 overflow-hidden">
        <img
          class="w-full h-full object-cover"
          width=""
          height=""
          src="{{ product.featured_image | image_url: width: 240, height: 240 }}"
          alt="{{ product.featured_image.alt }}"
        >
      </div>
    {% else %}
      {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
    {% endif %}
    <div class="flex flex-col p-4">
      {% if show_vendor %}
        <span class="text-sm text-gray-400"> {{ product.vendor }}</span>
      {% endif %}
      <p class="text-gray-700 uppercase font-medium">{{ product.title }}</p>
      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>
  </a>
</div>

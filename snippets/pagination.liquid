{%- if pagination.pages > 0 -%}
  {% comment %} {{ pagination | default_pagination }} {% endcomment %}
  <nav role="navigation" class="flex justify-center my-8">
    {%- if pagination.previous -%}
      <a
        class="border border-color-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium transition-colors"
        href="{{ pagination.previous.url }}"
      >
        {{- pagination.previous.title -}}
      </a>
    {%- endif -%}

    {%- for part in pagination.parts -%}
      {%- if part.is_link -%}
        <a
          class="border border-color-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium transition-colors"
          href="{{ part.url }}"
        >
          {{- part.title -}}
        </a>
      {%- else -%}
        <span
          class="border border-color-gray-600 bg-gray-600 text-white px-8 py-3 mx-1 rounded-sm font-medium transition-colors"
        >
          {{- part.title -}}
        </span>
      {%- endif -%}
    {%- endfor -%}

    {%- if pagination.next -%}
      <a
        class="border border-color-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium transition-colors"
        href="{{ pagination.next.url }}"
      >
        {{- pagination.next.title -}}
      </a>
    {%- endif -%}
  </nav>
{%- endif -%}
